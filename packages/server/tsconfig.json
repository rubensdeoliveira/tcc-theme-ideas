{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"rootDir": "./src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"allowJs": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		}
	},
	"include": ["./src/**/*"]
}